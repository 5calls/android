<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/h1_text_size"
            android:text="@string/about_header"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_p1"
            android:textSize="@dimen/text_size_paragraph"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_p2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_p3"
            android:textSize="@dimen/text_size_paragraph"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <!--
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/accessibility_min_size"
                android:id="@+id/why_calling_btn"
                android:text="@string/why_calling_btn"
                android:layout_marginEnd="8dp"
                android:background="@color/button_color"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorPrimaryDark"
                />
                -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/accessibility_min_size"
                android:id="@+id/about_us_btn"
                android:text="@string/about_us_btn"
                android:background="@color/button_color"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calls_to_date"
            android:textSize="@dimen/h2_text_size"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/open_source_info"
            android:textSize="@dimen/text_size_paragraph"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/version_info"
            android:textSize="@dimen/text_size_paragraph"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>
</ScrollView>