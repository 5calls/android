<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        style="@style/mainLinearLayout"
        android:orientation="vertical">

        <TextView
            style="@style/tutorialHeadStyle"
            android:layout_marginBottom="@dimen/text_layout_marginBottom16"
            android:text="@string/about_header" />

        <TextView
            style="@style/paragraphTextStyle"
            android:layout_marginBottom="@dimen/text_layout_marginBottom16"
            android:text="@string/about_p1" />

        <TextView
            style="@style/subheadingTutorialStyle"
            android:layout_marginBottom="@dimen/text_layout_marginBottom16"
            android:text="@string/about_p2" />

        <TextView
            style="@style/paragraphTextStyle"
            android:layout_marginBottom="@dimen/text_layout_marginBottom16"
            android:text="@string/about_p3" />

        <TextView
            android:id="@+id/callsToDateTextView"
            style="@style/aboutSubtStyle" />

        <Button
            android:id="@+id/signUpNewsletterButton"
            style="@style/transparentBtnStyle"
            android:text="@string/sign_up_newsletter_btn" />

        <TextView
            style="@style/aboutParagraphTextStyle"
            android:text="@string/about_us_prompt" />

        <Button
            android:id="@+id/aboutUsButton"
            style="@style/transparentBtnStyle"
            android:text="@string/about_us_btn" />

        <TextView
            style="@style/aboutParagraphTextStyle"
            android:text="@string/contact_us_prompt" />

        <Button
            android:id="@+id/contactUsButton"
            style="@style/transparentBtnStyle"
            android:text="@string/contact_us_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/social_prompt"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_paragraph"
            android:textStyle="bold|italic" />

        <!-- Social media buttons. -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/twitterButton"
                style="@style/transparentBtnStyle"
                android:layout_margin="0dp"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/twitter_btn" />

            <Button
                android:id="@+id/facebookButton"
                style="@style/transparentBtnStyle"
                android:layout_margin="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/facebook_btn" />

            <Button
                android:id="@+id/instagramButton"
                style="@style/transparentBtnStyle"
                android:layout_margin="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/instagram_btn" />
        </LinearLayout>

        <TextView
            style="@style/aboutParagraphTextStyle"
            android:text="@string/rate_us_prompt" />

        <Button
            android:id="@+id/rateUsButton"
            style="@style/transparentBtnStyle"
            android:text="@string/rate_us_btn" />

        <TextView
            style="@style/linksParagraphTextStyle"
            android:text="@string/open_source_info" />

        <TextView
            android:id="@+id/versionInfoTextView"
            style="@style/paragraphTextStyle"
            android:layout_marginTop="@dimen/margin_top16" />

        <Button
            android:id="@+id/licenseButton"
            style="@style/licenseBtnStyle"
            android:text="@string/license_btn" />
    </LinearLayout>
</ScrollView>
