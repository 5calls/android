<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@color/issue_background_color"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/issue_name"
        android:textSize="@dimen/h1_text_size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/issue_call_count"
        android:layout_below="@id/issue_name"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_check_black_36dp"
        android:tint="@color/check_color"
        android:layout_toStartOf="@id/issue_call_count"
        android:layout_below="@id/issue_name"
        android:layout_alignParentBottom="true"
        android:id="@+id/issue_done_img"
        android:contentDescription="@string/issue_done_content_description"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>