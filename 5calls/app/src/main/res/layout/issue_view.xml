<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/viewRelativeLayoutStyle">

    <TextView
        android:id="@+id/issueNameTextView"
        style="@style/issueViewTextStyle"
        android:layout_toEndOf="@+id/issueDoneImageView"
        android:layout_toRightOf="@id/issueDoneImageView" />

    <TextView
        android:id="@+id/issueCallCountTextView"
        style="@style/issueCallCountStyle"
        android:layout_below="@id/issueNameTextView"
        android:layout_toEndOf="@id/issueDoneImageView"
        android:layout_toRightOf="@id/issueDoneImageView" />

    <ImageView
        android:id="@+id/issueDoneImageView"
        style="@style/issueImageStyle"
        android:contentDescription="@null"
        android:src="@drawable/checked" />

</RelativeLayout>
