<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:background="@color/issue_background_color"
    android:padding="16dp"
    android:layout_marginBottom="2dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/issue_name"
        android:textSize="@dimen/h1_text_size"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/issue_call_count"
        android:layout_below="@id/issue_name"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_check_black_36dp"
        android:tint="@color/check_color"
        android:layout_toStartOf="@id/issue_call_count"
        android:layout_below="@id/issue_name"
        android:layout_alignParentBottom="true"
        android:id="@+id/issue_done_img"
        android:contentDescription="@string/issue_done_content_description"
        />

</RelativeLayout>